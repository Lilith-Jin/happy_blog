<h1>Blog列表</h1>
<%= link_to "新增課程", new_blog_path%>
<thead>
  <tr>
    <td>名稱</td>
    <td>簡介</td>
  </tr>
</thead>
<tbody>
  <% @blogs.each do |blog|%>
    <tr>
      <th><%= blog.title %></th>
      <th><%= blog.content %></th>
      <th><%= link_to "詳細內容", blog_path(blog) %></th>
      <th><%= link_to "編輯", edit_blog_path(blog) %></th>
      <th><%= link_to "刪除", blog_path(blog), method: 'delete', data: { confirm: '確認刪除？' } %></th>
    </tr>
  <% end %>
</tbody>